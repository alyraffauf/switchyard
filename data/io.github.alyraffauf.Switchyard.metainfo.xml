<?xml version="1.0" encoding="UTF-8" ?>
<component type="desktop-application">
  <id>io.github.alyraffauf.Switchyard</id>

  <name>Switchyard</name>
  <summary>Rules-based link router and launcher</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <content_rating type="oars-1.0" />

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <developer id="io.github.alyraffauf">
    <name>Aly Raffauf</name>
  </developer>

  <provides>
    <binary>switchyard</binary>
    <mediatype>x-scheme-handler/http</mediatype>
    <mediatype>x-scheme-handler/https</mediatype>
  </provides>

  <url type="homepage">https://github.com/alyraffauf/switchyard</url>
  <url type="bugtracker">https://github.com/alyraffauf/switchyard/issues</url>
  <url type="vcs-browser">https://github.com/alyraffauf/switchyard</url>
  <url type="donation">https://ko-fi.com/alyraffauf</url>

  <description>
    <p>
      Switchyard routes clicked links to the right browser based on your preferences. Like a railroad dispatch directing trains to different tracks, it <em
            >automatically</em> opens URLs in the appropriate browser, or shows a quick picker when no rule matches. Create simple domain matches or complex regular expressions to get the right browser every time. Whether you&apos;re browser-hopping or juggling work and play, Switchyard takes you where you need to be.
    </p>
  </description>

  <launchable
        type="desktop-id"
    >io.github.alyraffauf.Switchyard.desktop</launchable>

    <releases>
      <release version="0.8.2" date="2026-01-17">
        <url
                type="details"
            >https://github.com/alyraffauf/switchyard/releases/tag/v0.8.2</url>
        <description translate="no">
          <p>This release comes with the following improvements:</p>
          <ul>
            <li>Allows import/export of the config file.</li>
            <li>Redesigned rule editor.</li>
          </ul>
        </description>
      </release>
</releases>

